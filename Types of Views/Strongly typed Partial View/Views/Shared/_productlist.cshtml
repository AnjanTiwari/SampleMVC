@model Strongly_typed_Partial_View.Models.Product

<table border="3" width="500" align="center">
    <tr>
        <td>
            <img src="@Url.Content(Model.picture)" width="150" height="150" />
        </td>
        <td>
            <table>
                <tr>
                    <td>Product Id </td>
                    <td>: @Model.id</td>

                </tr>
                <tr>
                    <td>Product Name </td>
                    <td>: @Model.name</td>

                </tr>
                <tr>
                    <td>Price </td>
                    <td>: @Model.price</td>

                </tr>
            </table>
        </td>
    </tr>
</table>